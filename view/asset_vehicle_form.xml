<data>
    <xpath expr="/form/notebook" position="before">
        <label name="driver"/>
        <field name="driver"/>
    </xpath>
    <xpath expr="/form/notebook" position="inside">
        <page id="vehicle" string="Vehicle" col="2" states="{'invisible': Eval('type') != 'vehicle'}">
            <label name="description"/>
            <field name="description"/>
            <separator name="technical_description" colspan="2"/>
            <field name="technical_description" colspan="2"/>
        </page>
    </xpath>
</data>
